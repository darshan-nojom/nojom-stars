                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <android.textview.TextViewSFTextPro
                            android:id="@+id/tv_title_email"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="start|center_vertical"
                            android:text="@string/show_your_email"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            app:fonts="@string/sfpro_text_bold" />

                        <com.nojom.util.SegmentedButtonGroupNew
                            android:id="@+id/segmentLoginGroupEmail"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:background="@color/divider"
                            app:borderWidth="0dp"
                            app:divider="@color/iron"
                            app:dividerWidth="0dp"
                            app:radius="@dimen/_20sdp"
                            app:selectedBackground="@color/greendark"
                            app:selectedButtonRadius="@dimen/_20sdp">

                            <com.nojom.util.SegmentedButtonNew
                                android:id="@+id/tab_private"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@string/sfpro_text_regular"
                                android:padding="@dimen/_6sdp"
                                android:shadowRadius="20"
                                app:selectedTextColor="@color/white"
                                app:text="@string/private_"
                                app:textColor="@color/tab_gray"
                                app:textSize="@dimen/_12sdp" />

                            <com.nojom.util.SegmentedButtonNew
                                android:id="@+id/tab_public"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@string/sfpro_text_regular"
                                android:padding="@dimen/_6sdp"
                                app:selectedTextColor="@color/white"
                                app:text="@string/public_"
                                app:textColor="@color/tab_gray"
                                app:textSize="@dimen/_12sdp" />

                        </com.nojom.util.SegmentedButtonGroupNew>
                    </LinearLayout>

                    <android.edittext.EditTextSFTextRegular
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/round_corner"
                        android:fontFamily="@string/sfpro_text_regular"
                        android:hint="@string/email_address"
                        android:imeOptions="actionDone"
                        android:inputType="textCapSentences"
                        android:padding="@dimen/_10sdp"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</layout>