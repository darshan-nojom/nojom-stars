<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <android.textview.TextViewSFTextPro
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/payment_details"
            android:textColor="@color/C_1D2939"
            android:textSize="@dimen/_12sdp"
            app:fonts="@string/sfpro_text_regular"
            tools:ignore="TextContrastCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/gray_l_border_6"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.textview.TextViewSFTextPro
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/total"
                    android:textColor="@color/c_3C3C4399"
                    android:textSize="@dimen/_12sdp"
                    app:fonts="@string/sftext_regular"
                    tools:ignore="TextContrastCheck" />

                <android.textview.TextViewSFTextPro
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/_12sdp"
                    app:fonts="@string/sftext_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <android.textview.TextViewSFTextPro
                    android:id="@+id/lbl_agency"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/agency_fee"
                    android:textColor="@color/c_3C3C4399"
                    android:textSize="@dimen/_12sdp"
                    app:fonts="@string/sftext_regular"
                    tools:ignore="TextContrastCheck" />

                <android.textview.TextViewSFTextPro
                    android:id="@+id/tv_agencyFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/_12sdp"
                    app:fonts="@string/sftext_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <android.textview.TextViewSFTextPro
                    android:id="@+id/lbl_tax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/service_fee_10_1"
                    android:textColor="@color/c_3C3C4399"
                    android:textSize="@dimen/_12sdp"
                    app:fonts="@string/sftext_regular"
                    tools:ignore="TextContrastCheck" />

                <android.textview.TextViewSFTextPro
                    android:id="@+id/tv_serviceTax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/_12sdp"
                    app:fonts="@string/sftext_regular" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/C_F2F2F7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <android.textview.TextViewSFTextPro
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/total_price"
                    android:textColor="@color/C_020814"
                    android:textSize="@dimen/_12sdp"
                    app:fonts="@string/sfpro_text_regular"
                    tools:ignore="TextContrastCheck" />

                <android.textview.TextViewSFTextPro
                    android:id="@+id/tv_totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/_12sdp"
                    app:fonts="@string/sfpro_text_bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gray_l_border_6"
                android:padding="@dimen/_15sdp">

                <android.textview.TextViewSFTextPro
                    android:id="@+id/lbl_deposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/deposit"
                    android:textColor="@color/c_3C3C4399"
                    android:textSize="@dimen/_11sdp"
                    app:fonts="@string/sftext_regular"
                    tools:ignore="TextContrastCheck" />

                <android.textview.TextViewSFTextPro
                    android:id="@+id/txt_deposit_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbl_deposit"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="center_vertical"
                    android:text="@string/deposit"
                    android:textColor="@color/C_020814"
                    android:textSize="@dimen/_11sdp"
                    app:fonts="@string/sftext_regular"
                    tools:ignore="TextContrastCheck" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_chk_deposit"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/check_done"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_weight="1"
                android:background="@drawable/gray_l_border_6"
                android:padding="@dimen/_15sdp">

                <android.textview.TextViewSFTextPro
                    android:id="@+id/lbl_release"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/released"
                    android:textColor="@color/c_3C3C4399"
                    android:textSize="@dimen/_11sdp"
                    app:fonts="@string/sftext_regular"
                    tools:ignore="TextContrastCheck" />

                <android.textview.TextViewSFTextPro
                    android:id="@+id/txt_release_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbl_release"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="center_vertical"
                    android:text="@string/_0"
                    android:textColor="@color/C_020814"
                    android:textSize="@dimen/_11sdp"
                    app:fonts="@string/sftext_regular"
                    tools:ignore="TextContrastCheck" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_chk_released"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/check_done"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</layout>
