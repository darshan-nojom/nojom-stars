<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/lout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/white_button_bg"
        android:orientation="vertical"
        android:paddingStart="@dimen/_5sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingBottom="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_time"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgProfile"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                app:riv_corner_radius="@dimen/_7sdp"
                app:riv_oval="false" />

            <android.textview.TextViewSFTextPro
                android:id="@+id/txt_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                android:text="@string/instagram"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                app:fonts="@string/sfpro_text_semibold" />


            <android.textview.TextViewSFTextPro
                android:id="@+id/tv_sendOffer"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/white_button_bg"
                android:backgroundTint="#F3F4F8"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/C_5A5A5A"
                android:textSize="@dimen/_12sdp"
                app:fonts="@string/sfpro_text_regular" />
        </LinearLayout>

        <android.textview.TextViewSFTextPro
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_9sdp"
            app:fonts="@string/sfpro_text_midium" />
    </RelativeLayout>
</layout>