<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/gray_l_border_6"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_invoice" />

            <android.textview.TextViewSFTextPro
                android:id="@+id/tv_receiver_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:textColor="@color/C_020814"
                android:textSize="@dimen/_12sdp"
                app:fonts="@string/sfpro_text_regular" />

            <android.textview.TextViewSFTextPro
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/C_8080808C"
                android:textSize="@dimen/_10sdp"
                app:fonts="@string/sfpro_text_regular" />

            <android.textview.TextViewSFTextPro
                android:id="@+id/tv_camp_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_3sdp"
                android:textSize="@dimen/_10sdp"
                app:fonts="@string/sfpro_text_regular" />
        </LinearLayout>

        <android.textview.TextViewSFTextPro
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/job_id"
            android:textColor="@color/C_020814"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"
            app:fonts="@string/sfpro_text_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <android.textview.TextViewSFTextPro
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/C_020814"
                android:textSize="@dimen/_20sdp"
                app:fonts="@string/sfpro_text_bold" />

            <android.textview.TextViewSFTextPro
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="bottom"
                android:text="@string/sar"
                android:textColor="@color/c_3C3C4399"
                android:textSize="@dimen/_12sdp"
                app:fonts="@string/sfpro_text_bold" />

        </LinearLayout>

        <android.textview.TextViewSFTextPro
            android:id="@+id/txt_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/C_8080808C"
            android:textSize="@dimen/_10sdp"
            app:fonts="@string/sfpro_text_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/C_F2F2F7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <android.textview.TextViewSFTextPro
                android:id="@+id/txt_agents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableStart="@drawable/users_group_rounded"
                android:drawablePadding="@dimen/_5sdp"
                android:textColor="@color/C_080921"
                android:textSize="@dimen/_11sdp"
                app:fonts="@string/sfpro_text_regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.textview.TextViewSFTextPro
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Due Date"
                    android:textColor="@color/C_080921"
                    android:textSize="@dimen/_10sdp"
                    app:fonts="@string/sfpro_text_regular" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <android.textview.TextViewSFTextPro
                        android:id="@+id/txt_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="0%"
                        android:textColor="@color/C_3C3C43"
                        android:textSize="@dimen/_10sdp"
                        app:fonts="@string/sfpro_text_regular" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        app:trackThickness="@dimen/_3sdp"
                        app:trackColor="@color/C_EAECF0"
                        android:layout_toEndOf="@+id/txt_percent"
                        android:id="@+id/progressBar"
                        android:max="100"
                        app:indicatorColor="@color/colorAccent"
                        app:trackCornerRadius="@dimen/_7sdp" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>