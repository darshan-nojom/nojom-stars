<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <android.textview.TextViewSFTextPro
            android:id="@+id/tv_req_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/delivery_days"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            app:fonts="@string/sfpro_text_regular" />

        <ImageView
            android:id="@+id/img_info"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_information" />

        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_button_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:rotation="180"
                android:src="@drawable/arrow_next"
                app:tint="@color/black_50" />

            <android.textview.TextViewSFTextPro
                android:id="@+id/tv_req_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/select_option"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:font="@string/sfpro_text_regular" />

            <ImageView
                android:id="@+id/img_next"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:rotation="0"
                android:src="@drawable/arrow_next"
                app:tint="@color/black_50" />

        </LinearLayout>
    </LinearLayout>
</layout>