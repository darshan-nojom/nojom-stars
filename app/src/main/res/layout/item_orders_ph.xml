<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/white_button_bg"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.textview.TextViewSFTextPro
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.1"
                android:background="@android:color/background_dark"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/_12sdp" />

            <android.textview.TextViewSFTextPro
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:alpha="0.1"
                android:background="@android:color/background_dark"
                android:text="@string/_10"
                android:textColor="@color/C_020814"
                android:textSize="@dimen/_12sdp"
                app:fonts="@string/sfpro_text_midium" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.textview.TextViewSFTextPro
                    android:id="@+id/txt_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha="0.1"
                    android:background="@drawable/gray_button_bg_20"
                    android:backgroundTint="@android:color/background_dark"
                    android:gravity="center"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp"
                    app:fonts="@string/sfpro_text_regular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/progress1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_6sdp"
                        android:layout_weight="1"
                        android:background="@drawable/progress_bar_style"
                        android:progress="100"
                        android:progressDrawable="@drawable/progress_bar_style"
                        android:progressTint="@color/C_F2F2F7" />

                    <ProgressBar
                        android:id="@+id/progress2"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_6sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:background="@drawable/progress_bar_style"
                        android:max="100"
                        android:progressDrawable="@drawable/progress_bar_style"
                        android:progressTint="@color/C_F2F2F7" />

                    <ProgressBar
                        android:id="@+id/progress3"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_6sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:background="@drawable/progress_bar_style"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_bar_style" />

                    <ProgressBar
                        android:id="@+id/progress4"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_6sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:background="@drawable/progress_bar_style"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_bar_style" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/image_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:gravity="end"
                android:orientation="horizontal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">

            <android.textview.TextViewSFTextPro
                android:id="@+id/txt_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_35sdp"
                android:layout_weight="1"
                android:alpha="0.1"
                android:background="@android:color/background_dark"
                android:drawableStart="@drawable/ic_cal_new"
                android:drawablePadding="@dimen/_5sdp"
                android:text="@string/due_date"
                android:textColor="@color/c_3C3C43_99"
                android:textSize="@dimen/_10sdp"
                app:fonts="@string/sfpro_text_regular" />

            <android.textview.TextViewSFTextPro
                android:id="@+id/txt_camp_id"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:alpha="0.1"
                android:background="@android:color/background_dark"
                android:textColor="@color/c_3C3C43_99"
                android:textSize="@dimen/_10sdp"
                app:fonts="@string/sfpro_text_regular" />
        </LinearLayout>

    </LinearLayout>
</layout>