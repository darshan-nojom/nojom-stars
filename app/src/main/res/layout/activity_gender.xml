<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/C_F2F2F7"
        android:orientation="vertical"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginEnd="@dimen/_10sdp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/back" />
            <android.textview.TextViewSFTextPro
                android:id="@+id/txt_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/skip"
                android:textColor="@color/C_3C3C43"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:fonts="@string/sfpro_text_midium" />

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.textview.TextViewSFTextPro
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/what_s_your_gender"
                    android:textColor="@color/C_020814"
                    android:textSize="@dimen/_18sdp"
                    android:id="@+id/tv1"
                    android:textStyle="bold"
                    app:fonts="@string/sfpro_text_midium" />

                <android.textview.TextViewSFTextPro
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/tv2"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:text="@string/this_helps_brands_filter_and_find_you_nvisible_to_everyone"
                    android:textColor="@color/C_3C3C43"
                    android:textSize="@dimen/_12sdp"
                    app:fonts="@string/sfpro_text_regular" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <android.textview.TextViewSFTextPro
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:text="@string/visible_to_everyone"
                        android:textColor="@color/C_3C3C43"
                        android:id="@+id/tv3"
                        android:textSize="@dimen/_12sdp"
                        app:fonts="@string/sfpro_text_regular" />

                    <android.textview.TextViewSFTextPro
                        android:id="@+id/txt_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/border_text"
                        android:paddingStart="@dimen/_9sdp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableRight="@drawable/arrow_down"
                        android:paddingTop="@dimen/_3sdp"
                        android:layout_gravity="center_vertical"
                        android:paddingEnd="@dimen/_9sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:text="@string/public_"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_9sdp"
                        app:fonts="@string/sfpro_text_bold" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_15sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_15sdp"
                        android:id="@+id/rel_female"
                        android:background="@drawable/white_button_bg_7">

                        <android.textview.TextViewSFTextPro
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/female"
                            android:textColor="@color/C_020814"
                            android:textSize="@dimen/_12sdp"
                            android:id="@+id/txt_female"
                            app:fonts="@string/sfpro_text_regular" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="end"
                            android:src="@drawable/circle_uncheck" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_15sdp"
                        android:id="@+id/rel_male"
                        android:background="@drawable/white_button_bg_7">

                        <android.textview.TextViewSFTextPro
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/male"
                            android:textColor="@color/C_020814"
                            android:textSize="@dimen/_12sdp"
                            android:id="@+id/txt_male"
                            app:fonts="@string/sfpro_text_regular" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="end"
                            android:src="@drawable/circle_uncheck" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/rel_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/black_bg_50"
            android:backgroundTint="@color/C_E5E5EA">

            <android.textview.TextViewSFTextPro
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/c_AAAAAC"
                android:textSize="@dimen/_11sdp"
                app:fonts="@string/sfpro_text_bold" />

            <fr.castorflex.android.circularprogressbar.CircularProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminate="true"
                android:visibility="gone"
                app:cpbStyle="@style/CircularProgressBar"
                app:cpb_color="@color/white"
                app:cpb_colors="@array/progressColor"
                app:cpb_max_sweep_angle="300"
                app:cpb_min_sweep_angle="10"
                app:cpb_rotation_speed="1.0"
                app:cpb_stroke_width="@dimen/_2sdp"
                app:cpb_sweep_speed="1.0" />
        </RelativeLayout>
    </LinearLayout>
</layout>