<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/dialog_round_corner_top_white"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_10sdp">

            <android.textview.TextViewSFTextPro
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/who_can_see_this_item_1"
                android:textColor="@color/c_080921"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/txt_title"
                app:fonts="@string/sfpro_text_midium" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/close_circle" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/C_E5E5EA" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <RadioButton
                android:id="@+id/chk_public"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:buttonTint="@color/colorPrimary" />

            <android.textview.TextViewSFTextPro
                android:id="@+id/txt_lbl_public"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@id/chk_public"
                android:text="@string/public_"
                android:textColor="@color/c_080921"
                android:textSize="@dimen/_13sdp"
                app:fonts="@string/sfpro_text_regular" />

            <android.textview.TextViewSFTextPro
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_lbl_public"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@id/chk_public"
                android:text="@string/visible_to_everyone"
                android:textColor="@color/C_3C3C43"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/tv1"
                app:fonts="@string/sfpro_text_regular" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/C_E5E5EA" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <RadioButton
                android:id="@+id/chk_brand"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:padding="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:buttonTint="@color/colorPrimary" />

            <android.textview.TextViewSFTextPro
                android:id="@+id/txt_lbl_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@id/chk_brand"
                android:text="@string/brand_only"
                android:textColor="@color/c_080921"
                android:textSize="@dimen/_13sdp"
                app:fonts="@string/sfpro_text_regular" />

            <android.textview.TextViewSFTextPro
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_lbl_brand"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@id/chk_brand"
                android:text="@string/restricted_to_brand_members"
                android:textColor="@color/C_3C3C43"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/tv2"
                app:fonts="@string/sfpro_text_regular" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/C_E5E5EA" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <RadioButton
                android:id="@+id/chk_me"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:buttonTint="@color/colorPrimary" />

            <android.textview.TextViewSFTextPro
                android:id="@+id/txt_lbl_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@id/chk_me"
                android:text="@string/only_me"
                android:textColor="@color/c_080921"
                android:textSize="@dimen/_13sdp"
                app:fonts="@string/sfpro_text_regular" />

            <android.textview.TextViewSFTextPro
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_lbl_me"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@id/chk_me"
                android:text="@string/private_visible_only_to_owner"
                android:textColor="@color/C_3C3C43"
                android:id="@+id/tv3"
                android:textSize="@dimen/_13sdp"
                app:fonts="@string/sfpro_text_regular" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@color/C_E5E5EA" />

        <RelativeLayout
            android:id="@+id/rel_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/black_button_bg_60">

            <android.textview.TextViewSFTextPro
                android:id="@+id/tv_send"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/confirm"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                app:fonts="@string/sfdiaply_bold" />

            <fr.castorflex.android.circularprogressbar.CircularProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminate="true"
                android:visibility="gone"
                app:cpbStyle="@style/CircularProgressBar"
                app:cpb_color="@color/white"
                app:cpb_colors="@array/progressColor"
                app:cpb_max_sweep_angle="300"
                app:cpb_min_sweep_angle="10"
                app:cpb_rotation_speed="1.0"
                app:cpb_stroke_width="@dimen/_2sdp"
                app:cpb_sweep_speed="1.0" />
        </RelativeLayout>
    </LinearLayout>
</layout>