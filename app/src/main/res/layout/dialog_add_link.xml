<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_15sdp"
        android:background="@drawable/white_rounded_corner_15"
        android:backgroundTint="@color/C_F2F2F7"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <android.textview.TextViewSFTextPro
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/add_link"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            app:fonts="@string/sftext_bold" />

        <android.edittext.EditTextSFTextRegular
            android:id="@+id/et_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/white_button_bg_7"
            android:hint="@string/enter_link"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_7sdp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            app:fonts="@string/sftext_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <android.textview.TextViewSFTextPro
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/blue_border_5"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/cancel"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                app:fonts="@string/sftext_semibold" />

            <android.textview.TextViewSFTextPro
                android:id="@+id/tv_send"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/blue_button_bg"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/send"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                app:fonts="@string/sftext_semibold" />
        </LinearLayout>
    </LinearLayout>
</layout>